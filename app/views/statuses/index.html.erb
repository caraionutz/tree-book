<div class="page-header">
<h1> All statuses </h1>
</div>
<%= link_to "Status nou", new_status_path, class: "btn btn-success" %>
<% @statuses.each do |status| %>
  <div class="status">
        <strong><%= status.name %></strong>
        <p><%= status.content %></p>
        <div class="meta">
             <%= link_to time_ago_in_words(status.created_at) + " ago" , status %>
             <span class="admin">
             | <%= link_to "Edit", edit_status_path(status) %>
             | <%= link_to "Delete", status, method: :delete , data: { confirm: "Sigur vrei sa stergi acest status?"} %>
             </span>
        </div>
  </div>
<% end %>
